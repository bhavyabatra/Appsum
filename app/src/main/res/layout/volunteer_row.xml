<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp"
        android:text="NAME                : "
        android:id="@+id/volunteer_name_id"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp"
        android:text="NA"
        android:id="@+id/volunteer_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/volunteer_name_id"
        android:layout_toEndOf="@+id/volunteer_name_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp"
        android:text="EMAIL ID           : "
        android:id="@+id/emailid_id"
        android:layout_below="@+id/volunteer_name_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp"
        android:text="NA"
        android:id="@+id/emailid"
        android:layout_below="@+id/volunteer_name"
        android:layout_toRightOf="@+id/emailid_id"
        android:layout_toEndOf="@+id/emailid_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CONTACT NO   : "
        android:id="@+id/contact_no_id"
        android:layout_below="@+id/emailid_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NA"
        android:textSize="15sp"
        android:id="@+id/contact_no"
        android:layout_below="@+id/emailid_id"
        android:layout_toRightOf="@+id/volunteer_name_id"
        android:layout_toEndOf="@+id/volunteer_name_id" />
</RelativeLayout>
