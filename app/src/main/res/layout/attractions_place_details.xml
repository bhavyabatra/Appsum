<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/place_image"
        android:background="@drawable/attractions_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place name"
            android:id="@+id/place_name"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_name"
                android:id="@+id/place_addr"
                android:text="Place addr"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_addr"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:text="5.0"
                    android:textColor="@color/white"
                    android:background="#3F7E00"
                    android:id="@+id/rating"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reviewCount"
                    android:layout_marginLeft="5dp"
                    android:text="100 reviews"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />


            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <View android:id="@+id/ordering_separator1" android:background="#331a1a19" android:layout_width="fill_parent" android:layout_height="2dp"
        android:layout_below="@id/place_image"/>


    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_below="@id/ordering_separator1"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/call"
            android:layout_width="10dip"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:button="@null"
            android:src="@drawable/call"
            android:onClick="onCall"/>

        <ImageView
            android:id="@+id/launchMaps"
            android:tag="transitByBus"
            android:layout_width="10dip"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:button="@null"
            android:src="@drawable/launchmaps"
            android:onClick="loadMaps"/>

        <ImageView
            android:id="@+id/website"
            android:layout_width="10dip"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:button="@null"
            android:src="@drawable/website"
            android:onClick="loadWebsite"/>
    </LinearLayout>
    <View android:id="@+id/ordering_separator2" android:background="#331a1a19" android:layout_width="fill_parent" android:layout_height="2dp"
        android:layout_below="@id/icons"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ordering_separator2"
        android:drawableLeft="@drawable/address"
        android:textSize="15sp"
        android:id="@+id/fullAddress"
        android:text="Indiana ave"
        android:textStyle="bold"
        android:padding="10dp"
        android:textAlignment="center"
        android:drawablePadding="5.0dip"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullAddress"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:text="HOURS"
    android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:paddingLeft="2dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="MON"
               android:textColor="@color/red"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11AM to 5PM"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="TUE"
                android:textColor="@color/red"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11AM to 5PM"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="WED"
                android:textColor="@color/red"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11AM to 5PM"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="THU"
                android:textColor="@color/red"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11AM to 5PM"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:textColor="@color/red"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11AM to 5PM"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="SAT"
                android:textColor="@color/red"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11AM to 5PM"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="SUN"
                android:textColor="@color/red"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11AM to 5PM"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
</ScrollView>